/* Online Java Compiler and Editor */
import java.util.Scanner;
public class ReverseGivenValue{

     public static void main(String []args){
        Scanner s = new Scanner(System.in);
        System.out.println("please enter the number");
        int number = s.nextInt();
        int reverseNumber =0; 
        while(number>0) {
            int val = number;
            val = val %10;
            reverseNumber = reverseNumber *10+val;
            number/=10;
        }
        System.out.println("the reverse value of the given number is" +" "+"="+" "+reverseNumber);
     }
}
